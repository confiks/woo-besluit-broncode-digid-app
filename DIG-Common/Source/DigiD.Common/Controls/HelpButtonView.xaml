<Grid
    x:Class="DigiD.Common.Controls.HelpButtonView"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:resource="clr-namespace:DigiD.Common"
    Padding="20,0,0,0"
    HeightRequest="48"
    WidthRequest="48">
    <ImageButton
        x:Name="__HelpButton__"
        Margin="0,-12,0,0"
        Padding="12"
        x:FieldModifier="public"
        AutomationProperties.IsInAccessibleTree="True"
        AutomationProperties.Name="{Binding Path=HeaderText, StringFormat={x:Static resource:AppResources.InformationHelp}}"
        BackgroundColor="{DynamicResource Key=PageBackgroundColor}"
        Clicked="TapGestureRecognizer_OnTapped"
        HeightRequest="48"
        HorizontalOptions="End"
        Source="{AppThemeBinding Dark='icon_vraagteken_dark.png',
                                 Light='icon_vraagteken.png'}"
        VerticalOptions="Start"
        WidthRequest="48" />
</Grid>
