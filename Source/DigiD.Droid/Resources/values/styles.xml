<resources xmlns:tools="http://schemas.android.com/tools">
	<style name="DigiDThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorAccent">@color/orange</item>
		<item name="colorPrimaryDark">@color/grijs</item>
		<item name="colorPrimary">@color/orange</item>
		<item name="android:windowBackground">@color/window_background</item>
		<item name="windowActionModeOverlay">true</item>
	</style>

	<style name="DigiDThemeDark" parent="Theme.AppCompat.NoActionBar">
		<item name="colorAccent">@color/orange</item>
		<item name="colorPrimaryDark">@color/grijs</item>
		<item name="colorPrimary">@color/orange</item>
		<item name="android:windowBackground">@color/window_background</item>
		<item name="windowActionModeOverlay">true</item>
	</style>

	<style name="CustomDialogLight" parent="DigiDThemeLight">
		<item name="android:windowBackground">@drawable/popup_background</item>
	</style>

	<style name="CustomDialogDark" parent="DigiDThemeDark">
		<item name="android:windowBackground">@drawable/popup_background</item>
	</style>

	<style name="Theme.App.Starting" parent="Theme.SplashScreen">
		// Set the splash screen background, animated icon, and animation duration.
		<item name="windowSplashScreenBackground">@color/orange</item>

		<!-- <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash</item> -->
		<!-- <item name="windowSplashScreenAnimationDuration">500</item> -->
		
		// Set the theme of the Activity that directly follows your splash screen.
		<item name="postSplashScreenTheme">@style/DigiDThemeLight</item>  # Required.

		<!-- Status bar and Nav bar configs -->
		<item name="android:statusBarColor" tools:targetApi="l">@color/dark_orange</item>
		<item name="android:navigationBarColor">@color/dark_orange</item>
		<item name="colorPrimaryDark" tools:targetApi="l">@color/dark_orange</item>
		<item name="android:windowBackground" tools:targetApi="l">@layout/splash_screen</item>
	</style>

</resources>
