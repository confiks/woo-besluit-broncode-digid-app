<Button
    x:Class="DigiD.Common.Controls.BorderedButton"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:common="clr-namespace:DigiD.Common.Controls"
    BackgroundColor="Transparent"
    HeightRequest="{x:Static common:BorderedButton.DefaultButtonHeight}"
    HorizontalOptions="FillAndExpand"
    MinimumHeightRequest="{x:Static common:BorderedButton.DefaultButtonHeight}"
    Style="{StaticResource ButtonWithVisualState}" />

